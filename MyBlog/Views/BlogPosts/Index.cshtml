@model IEnumerable<MyBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<h2>Index</h2>

<p>
    <a asp-action="CreateBlogPost">Create New</a>
</p>


    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col col-xs-12">
                    <div class="blog-grids">
                        <div class="grid">
                            <div class="entry-media">

                            </div>
                            <div class="entry-body">
                                <h3>
                                    <a asp-action="DetailedBlogPost" asp-route-id="@item.BlogPostID">@Html.DisplayFor(modelItem => item.Title)</a>
                                </h3>
                                <p>
                                    @Html.DisplayFor(modelItem => item.Body)
                                </p>
                                <div class="read-more-date">

                                </div>
                                <div>
                                    <a asp-action="EditBlogPost" asp-route-id="@item.BlogPostID">Edit</a>
                                    <a asp-action="DetailedBlogPost" asp-route-id="@item.BlogPostID">Details</a>
                                    <a asp-action="DeleteBlogPost" asp-route-id="@item.BlogPostID">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>